# Configuración del servidor
PORT=3000
NODE_ENV=development

# URLs permitidas para CORS
FRONTEND_URL=http://localhost:3001

# Base de datos (SQLite)
DATABASE_PATH=./database/biblioteca.sqlite

# Configuración de seguridad
JWT_SECRET=tu-jwt-secret-super-seguro-aqui
JWT_EXPIRES_IN=7d

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/biblioteca-api.log

# Upload de archivos
MAX_FILE_SIZE=5242880
UPLOAD_DIRECTORY=uploads/

# Email (para futuras funcionalidades)
EMAIL_SERVICE=gmail
EMAIL_USER=tu-email@gmail.com
EMAIL_PASSWORD=tu-app-password

# URLs externas (para futuras integraciones)
BOOKS_API_URL=https://www.googleapis.com/books/v1
BOOKS_API_KEY=tu-google-books-api-key

# Configuración de desarrollo
DEBUG=true
PRETTY_LOGS=true